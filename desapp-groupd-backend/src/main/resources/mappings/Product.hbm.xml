<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-cascade="save-update">
	<class name="unq.tpi.desapp.model.Product" table="PRODUCTS">

		<id column="ID_PRODUCT" name="id" type="java.lang.Long">
			<generator class="identity" />
		</id>

		<property name="description" type="string" column="DESCRIPTION" />

		<property name="requiredPoints" type="integer" column="REQUIRED_POINTS" />
		
		<property name="stock" type="integer" column="STOCK" />


	</class>
</hibernate-mapping>