<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="unq.tpi.desapp.model.manager.CommentManager" table="COMMENT_MANAGERS">

		<id column="ID_COMMENT_MANAGER" name="id" type="java.lang.Long">
			<generator class="identity" />
		</id>

		<list name="comments" table="COMMENTS" cascade="all" lazy="true">
			<key column="ID_COMMENT_MANAGER" />
			<list-index column="indx" />
			<one-to-many class="unq.tpi.desapp.model.Comment" />
		</list>

	</class>
</hibernate-mapping>