<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="unq.tpi.desapp.model.Comment" table="COMMENTS">

		<id column="ID_COMMENT" name="id" type="java.lang.Long">
			<generator class="identity" />
		</id>

		<property name="user" column="ID_USER" type="unq.tpi.desapp.model.User" />

		<property name="message" type="string" column="MESSAGE" />

	</class>
</hibernate-mapping>
